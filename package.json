{
  "name": "impro",
  "version": "0.4.8",
  "type": "module",
  "scripts": {
    "start": "rm -rf build && NODE_ENV=development eleventy --serve",
    "build": "rm -rf build && NODE_ENV=production eleventy",
    "ios": "npm run build && cap sync && NODE_ENV=development cap run ios",
    "bundle:capacitor": "esbuild ./clientLibs/capacitor.js --bundle --format=esm --outfile=src/js/lib/capacitor.js",
    "bundle:lit-html": "esbuild ./clientLibs/litHtml.js --bundle --format=esm --outfile=src/js/lib/lit-html.js",
    "format": "pretty-quick --staged",
    "test": "npm run test:unit",
    "test:unit": "node tests/runTests.js",
    "prepare": "husky"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@capacitor/cli": "^7.0.0",
    "@import-maps/resolve": "^2.0.0",
    "dotenv": "^17.2.2",
    "es-module-lexer": "^1.4.1",
    "esbuild": "^0.25.10",
    "htmlparser2": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^27.0.0",
    "native-run": "^2.0.1",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@capacitor/app": "^7.0.0",
    "@capacitor/browser": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/haptics": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@capacitor/status-bar": "^7.0.0",
    "lit-html": "^3.3.1"
  }
}
